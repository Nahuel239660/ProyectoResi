{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "./dist",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "path/to/index.d.ts"],
  "exclude": ["node_modules"]
}
